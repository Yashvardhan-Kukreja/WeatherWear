<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.yash1300.weatherwear.MethodSelection">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="Hello,\n Yashvardhan"
    android:textColor="#ffffff"
    android:textSize="40sp"
    android:id="@+id/greeting"
    android:layout_marginTop="54dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How would you like to add the location?"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/greeting"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/mapsLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maps "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/mapsText"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/mapsIcon"
            android:src="@drawable/mapicon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapsLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/typingLayout"
        android:layout_marginTop="29dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typing"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/typingText"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:id="@+id/typingIcon"
            android:src="@drawable/keyboardicon"/>
    </LinearLayout>


</RelativeLayout>
