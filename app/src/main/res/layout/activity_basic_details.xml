<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.yash1300.weatherwear.BasicDetails">
   <android.support.design.widget.TextInputLayout
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:textColorHint="#ffffff"
    android:textColor="#ffffff"
    android:layout_marginTop="174dp"
    android:id="@+id/textInputLayout"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:id="@+id/nameInput"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff"/>
</android.support.design.widget.TextInputLayout>

   <RadioGroup
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       android:layout_height="wrap_content"
       android:layout_marginTop="18dp"
       android:layout_below="@+id/genderSelection"
       android:layout_centerHorizontal="true"
       android:id="@+id/radioGroup">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:buttonTint="#ffffff"
        android:textColorHighlight="#ffffff"
        android:text="Boy     "
        android:textColorLink="#ffffff"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/radioBoy" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girl"
        android:buttonTint="#ffffff"
        android:id="@+id/radioGirl"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textColorHighlight="#ffffff" />
   </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderSelection"
        android:text="Select your gender:"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textInputLayout"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/basicDetProceed"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
</RelativeLayout>
